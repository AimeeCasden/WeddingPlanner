@model Wedding

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
  background-image: url("/images/floral.jpg");
  background-repeat: no-repeat;
  background-size: cover;
}
#weddinginfo{
    width: 50%;
    height: 50%;
    background-color: white;
    margin-left: 25%;
    margin-top: 5%;
    border: 5px outset powderblue;
}
h1{
    text-align: center;
    color: grey;
}
#weddinginfo h4{
    margin-left: 3%;
    color: grey;
}
button {
  display: inline-block;
  margin-left: 28%;
  padding: 6px 12px;
  background: rgb(220,220,220);
  font-weight: bold;
  color: rgb(120,120,120);
  border: none;
  outline: none;
  border-radius: 3px;
  cursor: pointer;
  transition: ease .3s;
  
}

button:hover {
  background: powderblue;
  color: #ffffff;
}

p{
    margin-left: 3%;
    color: grey;
}
    </style>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>View Wedding</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css">
    <script src="main.js"></script>
</head>
<body>
    <div id ="weddinginfo">
        <h1>@ViewBag.ViewWedding.WedderOne & @ViewBag.ViewWedding.WedderTwo</h1>
        <br>
        <h4>Date: @ViewBag.ViewWedding.Date.ToString("D")</h4>
        <br><br>
        <h4>Location:@ViewBag.ViewWedding.Location</h4>
        <br><br>
        <h4>Guest List: </h4>
        @foreach(var x in ViewBag.Guests)
        {
            <p>@x.Person.FirstName @x.Person.LastName</p>
        }
        <br><br>
        
    </div>
    <br><br>
    <button><a href="/clear">Logout</a></button>
    <button><a href="/Welcome">Dashboard</a></button>

    
</body>
</html>
